<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorControlActivated</item>
        <item name="android:colorButtonNormal">@color/colorButtonNormal</item>

        <item name="android:borderlessButtonStyle">@style/BorderlessButton</item>
        <item name="borderlessButtonAccentStyle">@style/BorderlessButtonAccent</item>
    </style>

    <style name="SwitchButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">72sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextOnLight</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
    </style>

    <style name="BorderlessButtonAccent" parent="BorderlessButton">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
